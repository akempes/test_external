#!/usr/bin/env bash

function initproject() {

    mkdir $2
    cd $2
    # git init
    # git add -A && git commit -m "Initial commit"

}

function success() {
    echo -e "\033[1m\033[32mInstallation completed!\033[0m"
}

if [ "$2" == "" ]; then
    
    echo -e "\033[31mNo project name is specified! Correct usage: 7 install [framework] [project_name]\033[0m"

elif [ "$1" == "laravel" ]; then
    
    echo "install laravel"
    initproject
    echo "hoi"
    # curl https://github.com/laravel/laravel/archive/master.zip
    # unzip master.zip -d working
    # rm master.zip
    # cd working/laravel-master
    # composer install
    # success

elif [ "$1" == "wordpress" ]; then

    echo "install wordpress"
    initproject
    success


elif [ "$1" == "none" ]; then

    echo "install empty project"
    initproject
    success

else

    echo -e "\033[31mThis framework not supported! Supported frameworks are: none, laravel and wordpress\033[0m"

fi
